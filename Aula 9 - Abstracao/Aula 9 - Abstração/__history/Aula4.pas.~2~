unit Aula4;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs,
  FMX.Controls.Presentation, FMX.StdCtrls;

type
  TForm1 = class(TForm)
    Button1: TButton;
    Button2: TButton;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    procedure CadastrarCliente(Nome, Telefone, Endereco : String);
  end;

var
  Form1: TForm1;

implementation

{$R *.fmx}

procedure TForm1.Button1Click(Sender: TObject);
begin
  CadastrarCliente('Thulio', '3232839238', 'Rua do Teste 21');
end;

procedure TForm1.CadastrarCliente(Nome, Telefone, Endereco: String);
var
  Lista : TStringList;
begin
  Lista := TStringList.Create;
  try
    Lista.Add('Nome:' + Nome);
    Lista.Add('Telefone:' + Telefone);
    Lista.Add('Endereço:' + Endereco);
    Lista.SaveToFile('Cliente.txt');
  finally
    Lista.Free;
  end;
end;

end.
