unit Cliente;

interface

uses
  System.Classes;

type
  TCliente = class
  public
    Nome: String;
    Telefone: String;
    Endereco: String;
    Cidade: String;
    UF: String;
    Saldo : Currency;
    constructor Create;
    procedure CadastrarCliente;
    procedure CriarFinanceiro;
  end;

implementation

{ TCliente }

procedure TCliente.CadastrarCliente;
var
  Lista : TStringList;
begin
  Lista := TStringList.Create;
  try
    Lista.Add('Nome:' + Nome);
    Lista.Add('Telefone:' + Telefone);
    Lista.Add('Endereço:' + Endereco);
    Lista.Add('Cidade:' + Cidade);
    Lista.Add('UF:' + UF);
    Lista.SaveToFile('Cliente.txt');
  finally
    Lista.Free;
  end;
end;

constructor TCliente.Create;
begin
  UF := 'RJ';
  Saldo := 1000;
end;

procedure TCliente.CriarFinanceiro;
var
  Lista : TStringList;
begin
  Lista := TStringList.Create;
  try
    Lista.Add('Nome:' + Nome);
    Lista.Add('Saldo:' + Saldo);
    Lista.SaveToFile('Cliente.txt');
  finally
    Lista.Free;
  end;
end;

end.
